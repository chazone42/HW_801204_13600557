<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView android:id="@+id/imgBg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bg" />

        <TextView android:id="@+id/showColor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorOne"
            android:text="222-222-888"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

        <TextView android:id="@+id/tvRgb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="//RGB"
            android:layout_below="@+id/showColor"
            android:layout_alignLeft="@+id/showColor"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="5dp">


        <Button
            android:id="@+id/colorOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorOne"
            android:textColor="#fff" />

        <Button
            android:id="@+id/colorTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@color/colorTwo"
            android:textColor="#fff" />

        <Button
            android:id="@+id/colorThree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/colorThree"
            android:textColor="#fff" />

        <Button
            android:id="@+id/colorFour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/colorFour"
            android:textColor="#fff" />

        <Button
            android:id="@+id/colorFive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorFive"
            android:textColor="#fff"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/colorSix"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorSix"
            android:textColor="#fff" />


    </LinearLayout>




</LinearLayout>